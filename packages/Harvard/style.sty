\ProvidesPackage{packages/Harvard/style}

% School name and location
\university{Harvard University}
\universitycity{Cambridge}
\universitystate{Massachusetts}

% School color found from university's graphic identity site:
% http://isites.harvard.edu/icb/icb.do?keyword=k75408&pageid=icb.page392732
\definecolor{SchoolColor}{rgb}{0.6471, 0.1098, 0.1882} % Crimson
\definecolor{chaptergrey}{rgb}{0.6471, 0.1098, 0.1882} % for chapter numbers
\definecolor{SchoolColor}{rgb}{0.0000, 0.5215, 0.2235} % UAB green
\definecolor{SchoolColor}{rgb}{0.067, 0.404, 0.694} % blue
\definecolor{chaptergrey}{rgb}{0.067, 0.404, 0.694} % blue

\hypersetup{
    colorlinks=true,
    citecolor=SchoolColor,
    filecolor=black,
    linkcolor=SchoolColor,
    urlcolor=SchoolColor,
}

% Formatting guidelines found in:
% http://www.gsas.harvard.edu/publications/form_of_the_phd_dissertation.php
\renewcommand{\frontmatter}{
	\input{frontmatter/personalize}
	\maketitle
        \maketitleNEW  
	\copyrightpage
	\abstractpage
	\tableofcontents
	% \listoffigures % optional
	\dedicationpage
	\acknowledgments
}

\renewcommand{\maketitle}{
	\thispagestyle{empty}
	\vspace*{\fill}
	\vspace{100pt}
	\begin{center}
	\Huge \textcolor{SchoolColor}{\thetitle} \normalsize \\
	\vspace{100pt}
	\textsc{a dissertation presented \\ by\\
	\theauthor\\ to\\ The Department of \@department\\
	\vspace{12pt}
	in partial fulfillment of the requirements\\
	for the degree of\\ \@degree\\
	in the subject of\\ \@field\\
	\vspace{12pt}
	\@university\\ \@universitycity, \@universitystate\\
	\@degreemonth\ \@degreeyear}
	\end{center} \vspace*{\fill}
}

\newcommand{\maketitleNEW}{
	\thispagestyle{empty}
	% \vspace*{\fill}
	\begin{center}
		% Title with custom line spacing
		{\Huge 
            \setstretch{1.0} % Adjust the line spacing for the title
            \textcolor{SchoolColor}{Numerical characterization of \\ small molecules and protein \\ druggable pockets} \par}
		\vspace{0.5cm} % Adjust spacing below the title
		
		% Subtitle and details
		{\normalsize \textsc{Memòria presentada per Arnau Comajuncosa Creus \\ 
		per optar al Grau de Doctor per la \\ 
		Universitat Autònoma de Barcelona} \par}
		\vspace{3.5cm} % Adjust spacing before affiliation
		
		% Affiliation and program details
		{\normalsize \textsc{Structural Bioinformatics and Network Biology Lab \\ 
		Institute for Research in Biomedicine (IRB Barcelona)} \par}
		% \vspace{1cm} % Adjust spacing before program details
		
		{\normalsize \textsc{Programa de Doctorat en Química (2020-2024) \\ 
		Universitat Autònoma de Barcelona (UAB)} \par}
		% \vspace{1cm} % Adjust spacing before the date
		
		% Date
		{\normalsize \textsc{Desembre 2024} \par}
		% \vspace{2cm} % Adjust spacing before logos
	\end{center}

	% Images at the bottom of the page
	\vspace*{\fill}
	\begin{center}
		\begin{tabular}{c@{\hspace{3cm}}c}
			\includegraphics[width=4.2cm]{figures/Other/UAB.png} & 
			\includegraphics[width=4.2cm]{figures/Other/IRB.png} \\
		\end{tabular}
	\end{center}
}

\newcommand{\copyrightpage}{
	\newpage
	\thispagestyle{empty}
	\vspace*{\fill}
	% \scshape \noindent \small \copyright \small 2024\hspace{3pt}-- \theauthor \\
        \scshape \noindent \small  \small \theauthor \hspace{3pt}-- \copyright 2020-2024 \\
        \noindent \thetitle, PhD Thesis
	% \noindent all rights reserved.
	\vspace*{\fill}
	\newpage
	\rm
}

\newcommand{\abstractpage}{
	\newpage
	\pagenumbering{roman}
	\setcounter{page}{5}
	\pagestyle{fancy}
	\lhead{Thesis advisor: Professor \@advisor} \rhead{\@author}
	\renewcommand{\headrulewidth}{0.0pt}
	\vspace*{35pt}
	\begin{center}
	\Large \textcolor{SchoolColor}{\@title} \normalsize \\
	\vspace*{20pt}
	\scshape Abstract \\ \rm
	\end{center}
	\input{frontmatter/abstract}
	\vspace*{\fill}
	\newpage \lhead{} \rhead{}
	\cfoot{\thepage}
}

\newcommand{\dedicationpage}{
	\newpage \thispagestyle{fancy} \vspace*{\fill}
	\scshape \noindent \input{frontmatter/dedication} \pagenumbering{roman}
	\vspace*{\fill} \newpage \rm
}

\newcommand{\acknowledgments}{
	% \chapter*{Acknowledgments}
        \chapter*{\vspace{-1cm}Acknowledgments}
	\noindent
	\input{frontmatter/thanks}
	\vspace*{\fill} \newpage
	% \setcounter{page}{1}
	\pagenumbering{roman}
}


\newcommand{\contributors}{
 	\setcounter{page}{3}
	% \chapter*{Statement of Contributors}
        \chapter*{\vspace{-1cm}Statement of Contributors}
	\noindent
	% \pagenumbering{roman}
	\input{frontmatter/contributors}
	\vspace*{\fill} \newpage
}

\newcommand{\abbreviations}{
 	\setcounter{page}{4}
	% \chapter*{Abbreviations}
        \chapter*{\vspace{-1cm}Abbreviations}
	\noindent
	% \pagenumbering{roman}
	\input{frontmatter/abbreviations}
	\vspace*{\fill} \newpage
}